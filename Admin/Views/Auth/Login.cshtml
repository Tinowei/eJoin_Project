@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "eJoin Login";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5" id="authLogin">
                <div class="card-header">
                    <h3 class="text-center font-weight-light my-4">eJoin - Login</h3>
                </div>
                <div class="card-body">
                    <form>
                        <!--Vue3 -->
                        <div class="form-floating mb-3">
                            <input class="form-control" v-model="login.userName" id="inputUserName" type="text" placeholder="Username" />
                            <label for="inputUserName">帳號</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input class="form-control" v-model="login.password" id="inputPassword" type="password" placeholder="Password" />
                            <label for="inputPassword">密碼</label>
                        </div>
                        
                        <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                            <a class="btn btn-primary" v-on:click="loginBtn">Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>